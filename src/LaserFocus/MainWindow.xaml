<Window x:Class="LaserFocus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Laser Focus - Productivity App" Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        MinHeight="600" MinWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Laser Focus - Productivity App" 
                   HorizontalAlignment="Center" 
                   FontSize="28" FontWeight="Bold"
                   Margin="0,0,0,20"/>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Website Blocking Section -->
            <GroupBox Grid.Column="0" Header="Website Blocking" Padding="15">
                <StackPanel>
                    <!-- Add Website Controls -->
                    <TextBlock Text="Block Website:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="WebsiteUrlTextBox" Grid.Column="0" 
                                 Padding="8" FontSize="14"
                                 VerticalContentAlignment="Center"/>
                        <Button x:Name="AddWebsiteButton" Grid.Column="2" 
                                Content="Block Website" 
                                Padding="15,8" FontSize="14"
                                Click="AddWebsiteButton_Click"/>
                    </Grid>
                    
                    <!-- Blocked Websites List -->
                    <TextBlock Text="Blocked Websites:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <Border BorderBrush="Gray" BorderThickness="1" Height="200">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="BlockedWebsitesList" 
                                          ItemsSource="{Binding BlockedWebsites}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding}" 
                                                       VerticalAlignment="Center" 
                                                       Margin="5,0"/>
                                            <Button Grid.Column="1" Content="Remove" 
                                                    Padding="8,4" FontSize="12"
                                                    Click="RemoveWebsiteButton_Click"
                                                    Tag="{Binding}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </GroupBox>
            
            <!-- Process Monitoring Section -->
            <GroupBox Grid.Column="2" Header="Process Monitoring" Padding="15">
                <StackPanel>
                    <!-- Monitoring Controls -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="StartButton" Grid.Column="0" 
                                Content="Start Monitoring" 
                                Padding="15,10" FontSize="14"
                                Click="StartButton_Click"/>
                        <Button x:Name="StopButton" Grid.Column="2" 
                                Content="Stop Monitoring" 
                                Padding="15,10" FontSize="14"
                                Click="StopButton_Click"
                                IsEnabled="False"/>
                    </Grid>
                    
                    <!-- Running Processes List -->
                    <TextBlock Text="Running Processes:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <Border BorderBrush="Gray" BorderThickness="1" Height="200">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <DataGrid x:Name="ProcessesDataGrid" 
                                      ItemsSource="{Binding RunningProcesses}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      GridLinesVisibility="Horizontal"
                                      HeadersVisibility="Column"
                                      CanUserResizeColumns="True"
                                      CanUserSortColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Process" 
                                                        Binding="{Binding ProcessName}" 
                                                        Width="*"/>
                                    <DataGridTextColumn Header="ID" 
                                                        Binding="{Binding Id}" 
                                                        Width="60"/>
                                    <DataGridTextColumn Header="Status" 
                                                        Binding="{Binding Status}" 
                                                        Width="80">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{Binding StatusColor}"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </GroupBox>
        </Grid>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Height="30" Margin="0,20,0,0">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="Ready" FontSize="12"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>